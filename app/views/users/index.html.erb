<main>
  <% flash.each do |message_type, message| %>
  <%= message %>
  <% end %>

 <div class="container">

<!-- users -->
<div class ="row">
   <div class="col-xs-3">
     <%= render 'users/list', user: @user, book: @book %>
   </div>
   <div class="col-xs-9">
    <div class="book">
      <h2>Users</h2>
         <table class="table" >
          <thead>
             <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
             </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
             <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show',user_path(user.id) %>
              </td>
             </tr>
          <% end %>  
          </tbody>
         </table>
    </div>
   </div>
 </div>

</main>
