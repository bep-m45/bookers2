<main>
<!-- header -->
<h2>Log in</h2>

<!-- form_with -->
 <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
  <div class="form-group has-icon">
     <div class="form_icon"><label class="control-label sr-only" for="inputName">Name</label></div>

     <%= f.text_field :name,autofocus: true, id:"inputName" %>
     <span class="fa fausee form-control-icon" aria-hidden="true"></span>
  </div>

  <div class="form-group has-icon">
    <div class="form_icon"><label class="control-label sr-only" for="inputPassword">Password</label></div>
          <%= f.password_field :password, autocomplete: "off", id:"inputPassword" %>
    <span class="fa fausee form-control-icon" aria-hidden="true"></span>
  </div>
  <div class="actions">
    <%= f.submit "Log in", class:"base-1 mt-20" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
</main>
<!-- footer -->
